<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EcoFood.MealGeneratorController">
   <children>
      <TableView fx:id="tableMealList" layoutX="2.0" onMousePressed="#onPressMealList" prefHeight="304.0" prefWidth="770.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="50.0">
         <columns>
            <TableColumn fx:id="colNameMealList" editable="false" prefWidth="140.0" resizable="false" style="-fx-alignment: center-left;" text="Name" />
            <TableColumn fx:id="colSkillPointsMealList" editable="false" prefWidth="50.0" resizable="false" style="-fx-font-weight: bold; -fx-text-fill: darkred; -fx-alignment: center; -fx-text-overrun: clip;" text="SkillPts" />
            <TableColumn fx:id="colBalanceMultiplierMealList" editable="false" prefWidth="50.0" resizable="false" style="-fx-alignment: center; -fx-text-overrun: clip;" text="BalMult" />
            <TableColumn fx:id="colTastinessMealList" editable="false" prefWidth="50.0" resizable="false" style="-fx-alignment: center; -fx-text-overrun: clip;" text="Taste" />
            <TableColumn fx:id="colSurvivalSkillLvlMealList" prefWidth="50.0" resizable="false" style="-fx-alignment: center;" text="SurvLvl" />
            <TableColumn fx:id="colSkillsMealList" editable="false" prefWidth="120.0" resizable="false" sortable="false" style="-fx-alignment: center-left;" text="Skills" />
            <TableColumn fx:id="colToolsMealList" editable="false" prefWidth="110.0" resizable="false" sortable="false" text="Tools" />
            <TableColumn fx:id="colIngredientsMealList" editable="false" prefWidth="200.0" resizable="false" sortable="false" style="-fx-alignment: center-left;" text="Ingredients" />
         </columns>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TableView>
      <HBox alignment="CENTER_LEFT" layoutX="7.0" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" prefWidth="720.0" spacing="15.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="# food Items:" />
            <TextField fx:id="textNumRecipes" editable="false" prefHeight="25.0" prefWidth="30.0" />
            <Label text="# food Items/meal:" />
            <TextField fx:id="textNumItemsPerMeal" prefHeight="25.0" prefWidth="30.0" />
            <Label text="# meals to calculate:" />
            <TextField fx:id="textNumCalculations" editable="false" prefHeight="25.0" prefWidth="150.0" />
         </children>
         <padding>
            <Insets left="20.0" />
         </padding>
      </HBox>
      <GridPane layoutX="520.0" layoutY="374.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="buttonGenerate" mnemonicParsing="false" onAction="#onButtonGenerate" prefHeight="25.0" prefWidth="65.0" text="Generate" GridPane.columnIndex="1" />
            <Button fx:id="buttonClose" mnemonicParsing="false" onAction="#onButtonClose" prefWidth="65.0" text="Close" />
            <Button fx:id="buttonSave" mnemonicParsing="false" onAction="#onButtonSave" prefWidth="65.0" text="Save" GridPane.columnIndex="2" />
         </children>
      </GridPane>
      <ProgressBar fx:id="progressGenerate" layoutX="14.0" layoutY="364.0" prefHeight="18.0" prefWidth="429.0" progress="0.0" visible="false" />
   </children>
</AnchorPane>
